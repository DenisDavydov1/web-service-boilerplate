{
  "Serilog": {
    "MinimumLevel": {
      "Override": {
        "System.Net.Http.HttpClient.telegram_bot_client": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "Elasticsearch",
        "Args": {
          "indexFormat": "serilog-{0:yyyy.MM.dd}",
          "connectionTimeout": 5,
          "autoRegisterTemplate": true,
          "autoRegisterTemplateVersion": "ESv8"
        }
      }
    ]
  },
  "FileStorage": {
    "RootDirectory": "/app/file-storage"
  },
  "Kafka": {
    "Servers": "kafka:29091",
    "ConsumerTopic": "boiler-plate"
  },
  "HealthChecks": {
    "Services": [
      {
        "Type": "postgres"
      },
      {
        "Type": "elasticsearch",
        "Uri": ""
      },
      {
        "Type": "kibana",
        "Uri": "http://kibana:5601/kibana"
      },
      {
        "Type": "kafka"
      },
      {
        "Type": "kafka-ui",
        "Uri": "http://kafka-ui:8080/kafka-ui"
      },
      {
        "Type": "nginx",
        "Uri": "http://nginx/health"
      }
    ],
    "Publishers": [
      {
        "Type": "telegram",
        "ChatId": "",
        "PublishOnlyErrors": true
      }
    ]
  }
}